rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isCaregiverForPatient(patientUid) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.patientUid == patientUid;
    }

    // Public Directory for Patient Login
    match /patient_directory/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /users/{userId} {
      // Allow creation by authenticated users (for signup)
      allow create: if request.auth != null;
      
      // Allow update only by the owner
      allow update: if request.auth != null && request.auth.uid == userId;

      // Allow read if:
      // 1. Owner (authenticated and matches ID)
      // 2. It's a patient profile (publicly readable for login search)
      //    (Safe check for field existence)
      allow read: if (request.auth != null && request.auth.uid == userId) 
                  || ('role' in resource.data && resource.data.role == 'patient');
    }

    match /memories/{memoryId} {
      // Anyone can read memories, as patient view is public.
      // In a real app with multiple patients, this would need to be more secure.
      allow read: if true;
      
      // Relaxed rules for development: allow any authenticated user to create/manage memories
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    match /people/{personId} {
       allow read: if request.auth != null;
       allow write: if isRole('caregiver');
    }

    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if isRole('caregiver');
    }

    match /notes/{noteSessionId} {
      allow read: if request.auth != null;
      allow write: if isRole('caregiver');
    }
  }
}
